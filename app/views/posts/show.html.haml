.posts-wrapper.row
  .post
    .post-head
      .name
        Christina Reilly
    .image.center-block
      = image_tag @post.image.url(:medium), class:'img-responsive'
    %p.caption
      = @post.caption
    .text-center
      =link_to "Cancel", posts_path
      =link_to "Edit", edit_post_path(@post)
      =link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?"}
